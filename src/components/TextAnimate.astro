---
let { text, offset, animationName } = Astro.props;
offset ??= 0;
animationName ??= "colorin";
---

{text.split("").map((char : string, i : number) => {
    if (char === " ") return <h1 class="text-nowrap">&nbsp;</h1>;
    const delay = text.slice(0, i).replace(" ", "").length;
    return <h1 class="animated text-nowrap bounce-animation" style={{"animation-delay" : `${(offset + delay)*100}ms`}}>{char}</h1>;
})}

<style>
    @keyframes fadein {
		0% {
			opacity: 0;
			translate: 0px 10px;
		}
		75% {
			translate: 0px -5px;
			
		}
		100% {
			opacity: 1;
			translate: 0px 0px;
		}
	}

    h1.animated, h2.animated {
		animation: 600ms ease-in-out both fadein;
		transition: color 500ms;
	}
	
	h1.animated:hover, h2.animated:hover {
		color: #ad6ed1;
	}
</style>